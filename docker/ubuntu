FROM ubuntu:15.10
RUN apt-get update;apt-get install software-properties-common python-software-properties;apt-add-repository ppa:brightbox/ruby-ng
RUN apt-get update;apt-get install -y wget git vim dpkg-dev libffi-dev libffi6 gcc ruby2.2 ruby2.2-dev
ADD . /tmp
WORKDIR /tmp
RUN bundle install --path=vendor/bundle
RUN chef-client -z -o 'recipe[server]'
CMD service rsyslog start; service stns start;service nscd start;bundle exec rake spec
